<body>
    
    <?php 

    echo"<h1>Tabela de 1 a 10 em PHP colorida <h1>";

    echo "<table><tr>";
    
    for($x=1; $x<=10; $x++){
        if ($x % 2 == 0){
            echo "<td style = 'background-color: green'>$x </tr> </td>";
        }
        else{
        echo "<td style = 'background-color: red'>$x </tr> </td>";
        }
    };
    echo"</tr></table>";
    
  
    ?>
